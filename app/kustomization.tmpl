#@ load("@ytt:data", "data")
images:
- name: config
  newName: ellinj/spring-petclinic-config-server 
  newTag: #@ data.values.image.springpetclinicconfigserver
- name: gateway
  newName: ellinj/spring-petclinic-api-gateway
  newTag: #@ data.values.image.springpetclinicapigateway
- name: customers
  newName: ellinj/module=spring-petclinic-customers-service
  newTag: #@ data.values.image.springpetcliniccustomersservice
- name: vets
  newName: ellinj/pring-petclinic-vets-service
  newTag: #@ data.values.image.springpetclinicvetsservice
- name: visits
  newName: ellinj/module=spring-petclinic-visits-service
  newTag: #@ data.values.image.springpetclinicvisitsservice
resources:
- config-server-deployment.yml
- customer-service-deployment.yml
- gw-service-deployment.yml
- istio-virtual-service.yml
- vets-service-deployment.yml
- visit-service-deployment.yml
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
